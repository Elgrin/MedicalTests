<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="z.medicaltests.TestSettings">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Size"
                android:textSize="20sp"
                android:foregroundGravity="center"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:paddingStart="15dip"
                android:paddingEnd="4dip"
                android:paddingLeft="15dip"
                android:paddingRight="4dip"
                android:paddingTop="15dip"
                android:gravity="center" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/Exam_size"
                android:layout_below="@+id/Size"
                android:layout_centerInParent="true"
                android:inputType="number"
                android:background="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:hint="@string/edit_about"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Show_mistakes"
                android:text="@string/check_box_mistakes"
                android:layout_below="@+id/Exam_size"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commit_settings"
                android:text="@string/commit_settings_text"
                android:gravity="center"
                android:layout_below="@+id/Show_mistakes"
                android:layout_centerInParent="true"
                android:padding="25dp"
                android:background="@drawable/outline"
                android:layout_marginTop="15dp" />
        </RelativeLayout>
</ScrollView>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="z.medicaltests.TestSettings"
    android:padding="15dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Size"
                android:textSize="20sp"
                android:foregroundGravity="center"
                android:textColor="@android:color/black"
                android:background="@drawable/rounded"
                android:paddingStart="15dip"
                android:paddingEnd="4dip"
                android:paddingTop="15dip"
                android:paddingBottom="15dip"
                android:gravity="fill" />


            <EditText
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/Exam_size"
                android:layout_below="@+id/Size"
                android:layout_centerInParent="true"
                android:inputType="number"
                android:background="@android:color/white"
                android:textAlignment="center"
                android:layout_marginTop="15dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Show_mistakes"
                android:text="@string/check_box_mistakes"
                android:layout_below="@+id/Exam_size"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="15dp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commit_settings"
                android:text="@string/commit_settings_text"
                android:gravity="center"
                android:layout_below="@+id/Show_mistakes"
                android:layout_centerInParent="true"
                android:padding="25dp"
                android:background="@drawable/outline"
                android:layout_marginTop="15dp" />
        </RelativeLayout>
    </ScrollView>


</FrameLayout>

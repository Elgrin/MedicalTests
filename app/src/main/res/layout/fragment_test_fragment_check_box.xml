<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="z.medicaltests.TestFragmentCheckBox">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_number"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exercise_text"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <FrameLayout
                android:id="@+id/fragment_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_next"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_alignStart="@+id/button_save"
                    android:layout_alignEnd="@+id/button_save"
                    android:layout_alignLeft="@+id/button_save"
                    android:layout_alignRight="@+id/button_save"
                    android:id="@+id/button_next"
                    android:background="@drawable/outline"
                    android:padding="25dp" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_save"
                    android:layout_below="@+id/button_next"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:id="@+id/button_save"
                    android:background="@drawable/outline"
                    android:padding="25dp" />

            </RelativeLayout>
        </LinearLayout>
</ScrollView>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="z.medicaltests.ResultPage"
    android:padding="15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_page_text"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:id="@+id/result_label"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_text"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_below="@+id/result_label"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/result_page_button"
            android:text="@string/result_page_button"
            android:layout_gravity="center"
            android:padding="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/outline"
            android:layout_below="@+id/result_text"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/mistakes_page_button"
            android:layout_alignEnd="@+id/mistakes_page_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mistakes_page_button"
            android:text="@string/mistakes_page_button"
            android:layout_gravity="center"
            android:padding="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/outline"
            android:layout_below="@+id/result_page_button"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/again_page_button"
            android:text="@string/again_page_button"
            android:layout_gravity="center"
            android:padding="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/outline"
            android:layout_below="@+id/mistakes_page_button"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@+id/result_page_button"
            android:layout_alignEnd="@+id/result_page_button"/>



    </RelativeLayout>
    </ScrollView>


</FrameLayout>
